{# templates/user/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <h1>{{ user.nom }} {{ user.prenom }}</h1>

    <h2>Informations de l'utilisateur :</h2>
    <table class="table table-bordered table-striped table-hover">
        <tbody>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ user.adresse }}</td>
        </tr>
        <tr>
            <th>Téléphone</th>
            <td>{{ user.tel }}</td>
        </tr>
        </tbody>
    </table>

    <h2>Possessions de {{ user.nom }} :</h2>
    {% if user.possessions is not empty %}
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Valeur</th>
                <th>Type</th>
            </tr>
            </thead>
            <tbody>
            {% for possession in user.possessions %}
                <tr>
                    <td>{{ possession.nom }}</td>
                    <td>{{ possession.valeur }}</td>
                    <td>{{ possession.type }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Cet utilisateur n'a pas encore de possessions.</p>
    {% endif %}
{% endblock %}
